<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Animation" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#dedede</item>
        <item name="android:colorPrimary">#dedede</item>
        <item name="android:colorPrimaryDark">#d3d3d3</item>
    </style>

    <style name="Theme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#dedede</item>
        <item name="android:colorPrimary">#dedede</item>
        <item name="android:colorPrimaryDark">#d3d3d3</item>
    </style>

    <style name="Theme.AndroidMVICompose" parent="Theme.AppCompat" />
    <style name="Theme.Splash" parent="Theme.SplashScreen" >
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">4000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.NoActionBar</item>
    </style>
</resources>